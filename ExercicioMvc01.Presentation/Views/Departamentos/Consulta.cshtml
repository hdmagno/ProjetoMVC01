@model ExercicioMvc01.Presentation.Models.DepartamentoConsultaViewModel;

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Consulta de Departamentos</h5>

<div class="row">
    <div class="col-md-4">
       @using (Html.BeginForm())
       {
           <label>Departamento:</label>
           @Html.TextBoxFor(model => model.Nome,
          new
          {
              @class="form-control",
              @placeholder="Tecnologia da Informação"
          })
           <br />

           <input type="submit" class="btn btn-success" value="Pesquisar"/>
       }
    </div>
</div>

@if(Model != null && Model.Departamentos != null && Model.Departamentos.Count() > 0)
{
    <table class="table table-hover table-striped" >
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Departamentos)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Descricao</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">@Model.Departamentos.Count() departamentos encontrados.</td>
            </tr>
        </tfoot>
    </table>
}